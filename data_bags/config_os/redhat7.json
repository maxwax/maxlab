{
  "id": "redhat7",
  "doc": "Distribution and version specific provisioning for Red Hat 7",
  "repo_packages": {
    "rpmfusion-free-release-7": {
      "source": "http://repo.maxlab/files/os/centos/7/rpms/rpmfusion-free-release-7.noarch.rpm",
      "filename": "rpmfusion-free-release-7.noarch.rpm"
    },
    "rpmfusion-nonfree-release-7": {
      "source": "http://repo.maxlab/files/os/centos/7/rpms/rpmfusion-nonfree-release-7.noarch.rpm",
      "filename": "rpmfusion-nonfree-release-7.noarch.rpm"
    }
  },
  "default_packages": [
    "vim", "atop", "htop", "nc", "tree", "wget", "policycoreutils-python"
  ],
  "default_scripts": {
    "/etc": {
      "bashrc": {
        "subdir": "etc",
        "owner": "root",
        "group": "root",
        "mode": "0755"
      }
    },
    "/usr/local/etc": {
      "shell-basics": {
        "subdir": "usr/local/etc",
        "owner": "root",
        "group": "root",
        "mode": "0755"
      },
      "shell-history": {
        "subdir": "usr/local/etc",
        "owner": "root",
        "group": "root",
        "mode": "0755"
      }
    }
  }
}

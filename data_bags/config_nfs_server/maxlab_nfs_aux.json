{
  "id": "maxlab_nfs_aux",
  "doc": "NFS server configuration for aux.maxlab",
  "cfg": {
    "directory_tree" : {
      "srv": {
        "directory": "/srv",
        "owner": "root",
        "group": "root",
        "mode": "0755"
      }
    },
    "exports" : {
      "/srv/auxdata": {
        "enabled": true,
        "owner": "maxwell",
        "group": "maxwell",
        "mode": "0755",
        "comment": "Archive storage",
        "clients": {
          "macbooknext.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "macbooknextwifi.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "sarko.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "sarkowifi.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "chaosusb.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "mechsarko.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "mechsarkowifi.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          },
          "filer.maxlab": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          }
        }
      },
      "/srv/auxdata/clonezilla": {
        "enabled": false,
        "owner": "maxwell",
        "group": "maxwell",
        "mode": "0755",
        "comment": "Clonezilla storage",
        "clients": {
          "*": {
            "options": [
              "rw", "async", "no_root_squash", "no_all_squash"
            ]
          }
        }
      }
    }
  }
}
